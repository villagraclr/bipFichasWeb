@model SistemasBIPS.Models.CambioPassViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ministerio de Desarrollo Social - Gobierno de Chile";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Bienvenido (a)</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="alert alert-info">
            Gracias por confirmar su correo electrónico.
        </div>        
    </div>
    <div class="col-md-1"></div>
    <div id="divCambioPass" class="mainbox col-md-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Cambio de Contraseña</div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("CambioPass", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "cambioPassForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(m=>m.idUsuario, new { id = "idUsuario" })
                    <div class="control-group" style="margin-bottom: 25px">
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "txtPass", placeholder = "Contraseña actual" })
                        </div>
                    </div>
                    <div class="control-group" style="margin-bottom: 25px">
                        @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "text-danger" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>                        
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", id = "txtPass", placeholder = "Nueva contraseña" })                        
                        </div>
                    </div>
                    <div class="control-group" style="margin-bottom: 25px">
                        @Html.ValidationMessageFor(m => m.ConfirmNewPassword, null, new { @class = "text-danger" })
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", id = "txtConfirmPass", placeholder = "Confirme contraseña" })                        
                        </div>
                    </div>
                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 controls">
                            <input type="submit" class="btn btn-primary" value="Aceptar" id="btnCambioPass" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>